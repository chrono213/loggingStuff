<log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender,log4net">
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %level %logger [Current Activity: %property{activity}] - %message%newline" />
        </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="Console"/>
    </root>
</log4net>